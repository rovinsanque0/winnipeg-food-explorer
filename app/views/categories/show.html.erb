<h1 class="mb-4"><%= @category.name %></h1>

<h2>Restaurants in this Category</h2>

<% if @restaurants.any? %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 mt-3">
    <% @restaurants.each do |r| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= link_to r.name, r %></h5>
            <p class="card-text"><%= r.address %></p>
            <p class="card-text">
              <small class="text-muted"><%= r.ward&.name || "N/A" %></small>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= paginate @restaurants %>
  </div>
<% else %>
  <div class="alert alert-info mt-3">
    No restaurants found in this category.
  </div>
<% end %>
